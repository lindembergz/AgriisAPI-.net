{
  "name": "fornecedor-web-v20x2x0",
  "version": "0.0.0",
  "aws": {
    "environments": {
      "production": {
        "cloudfront": {
          "id": "EYPU44I15XVLR"
        },
        "s3": {
          "bucket": "ifarmer-applications",
          "deployment_folder": "fornecedor-web",
          "upload_folder": "fornecedor-web-uploads"
        }
      },
      "sandbox": {
        "cloudfront": {
          "id": "E1ARLX8DXOH8PM"
        },
        "s3": {
          "bucket": "ifarmer-applications-sandbox",
          "deployment_folder": "fornecedor-web",
          "upload_folder": "fornecedor-web-uploads"
        }
      }
    }
  },
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:stats": "ng build --stats-json",
    "build:prod": "ng build --configuration production",
    "build:analyze": "ng build --stats-json && npx webpack-bundle-analyzer dist/stats.json",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "test:coverage": "ng test --code-coverage --watch=false",
    "optimize": "node scripts/optimize-bundle.js",
    "performance:audit": "ng build --prod && npx lighthouse http://localhost:4200 --output=json --output-path=./performance-audit.json",
    "migrate:modern": "node scripts/migrate-to-modern-angular.js",
    "migrate:clean-backups": "find src -name '*.backup' -delete",
    "lint:modern": "echo 'Verificando conformidade com pr√°ticas modernas do Angular...' && npm run migrate:modern -- --dry-run"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
