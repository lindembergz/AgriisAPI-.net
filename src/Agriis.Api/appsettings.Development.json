{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=DBAgriis;Username=postgres;Password=RootPassword123;Port=5432;SSL Mode=Disable"
  },
  "JwtSettings": {
    "SecretKey": "development-secret-key-that-should-be-at-least-32-characters-long-for-testing"
  },
  "AwsSettings": {
    "AccessKey": "development-access-key",
    "SecretKey": "development-secret-key",
    "Region": "us-east-1",
    "S3BucketName": "agriis-dev-files"
  },
  "SerproSettings": {
    "BaseUrl": "https://gateway.apiserpro.serpro.gov.br",
    "ConsumerKey": "dev-consumer-key",
    "ConsumerSecret": "dev-consumer-secret"
  },
  "HangfireSettings": {
    "ConnectionString": "Host=localhost;Database=DBAgriis;Username=postgres;Password=RootPassword123;Port=5432"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.EntityFrameworkCore": "Information",
        "System": "Information",
        "Hangfire": "Information"
      }
    },
    "Properties": {
      "Environment": "Development"
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] [{SourceContext}] {Message:lj} {Properties:j}{NewLine}{Exception}",
          "restrictedToMinimumLevel": "Debug"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/agriis-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] [{SourceContext}] {Message:lj} {Properties:j}{NewLine}{Exception}",
          "shared": true,
          "flushToDiskInterval": "00:00:01"
        }
      }
    ],
    "Seq": {
      "ServerUrl": "http://localhost:5341",
      "ApiKey": ""
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information",
      "Microsoft.EntityFrameworkCore": "Information"
    }
  },
  "CorsSettings": {
    "AllowedOrigins": [ "http://localhost:3000", "https://localhost:3000", "http://localhost:8080" ],
    "AllowedMethods": [ "*" ],
    "AllowedHeaders": [ "*" ],
    "AllowCredentials": true
  },
  "RequestLogging": {
    "Enabled": true,
    "LogRequestBody": true,
    "LogResponseBody": true,
    "MaxBodySizeKB": 50
  }
}
