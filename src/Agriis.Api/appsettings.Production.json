{
  "ConnectionStrings": {
    "DefaultConnection": "Host=${DB_HOST};Database=${DB_NAME};Username=${DB_USER};Password=${DB_PASSWORD};Port=${DB_PORT};SSL Mode=Require;Trust Server Certificate=false"
  },
  "JwtSettings": {
    "SecretKey": "${JWT_SECRET_KEY}",
    "Issuer": "Agriis.Api",
    "Audience": "Agriis.Client",
    "TokenExpirationInDays": 100,
    "RefreshTokenExpirationInDays": 60
  },
  "AwsSettings": {
    "AccessKey": "${AWS_ACCESS_KEY}",
    "SecretKey": "${AWS_SECRET_KEY}",
    "Region": "${AWS_REGION}",
    "S3BucketName": "${AWS_S3_BUCKET}"
  },
  "SerproSettings": {
    "BaseUrl": "https://gateway.apiserpro.serpro.gov.br",
    "ConsumerKey": "${SERPRO_CONSUMER_KEY}",
    "ConsumerSecret": "${SERPRO_CONSUMER_SECRET}",
    "TokenUrl": "/token"
  },
  "HangfireSettings": {
    "ConnectionString": "Host=${HANGFIRE_DB_HOST};Database=${HANGFIRE_DB_NAME};Username=${HANGFIRE_DB_USER};Password=${HANGFIRE_DB_PASSWORD};Port=${HANGFIRE_DB_PORT};SSL Mode=Require"
  },
  "Serilog": {
    "Using": [ 
      "Serilog.Sinks.Console", 
      "Serilog.Sinks.File", 
      "Serilog.Sinks.PostgreSQL",
      "Serilog.Exceptions"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.EntityFrameworkCore": "Warning",
        "System": "Warning",
        "Hangfire": "Information"
      }
    },
    "Properties": {
      "Environment": "Production"
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact",
          "restrictedToMinimumLevel": "Information"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "/app/logs/agriis-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] [{SourceContext}] {Message:lj} {Properties:j}{NewLine}{Exception}",
          "restrictedToMinimumLevel": "Information",
          "shared": true,
          "flushToDiskInterval": "00:00:01"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "/app/logs/agriis-errors-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 90,
          "restrictedToMinimumLevel": "Error",
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] [{SourceContext}] {Message:lj} {Properties:j}{NewLine}{Exception}",
          "shared": true
        }
      },
      {
        "Name": "PostgreSQL",
        "Args": {
          "connectionString": "${LOG_DB_CONNECTION}",
          "tableName": "logs",
          "autoCreateSqlTable": true,
          "restrictedToMinimumLevel": "Information",
          "batchSizeLimit": 50,
          "period": "00:00:05"
        }
      }
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "${ALLOWED_HOSTS}",
  "CorsSettings": {
    "AllowedOrigins": [ "${CORS_ALLOWED_ORIGINS}" ],
    "AllowedMethods": [ "GET", "POST", "PUT", "DELETE", "OPTIONS" ],
    "AllowedHeaders": [ "*" ],
    "AllowCredentials": true
  },
  "HealthChecks": {
    "Enabled": true,
    "DatabaseTimeoutInSeconds": 60,
    "MemoryThresholdMB": 2048,
    "ExternalServicesTimeoutInSeconds": 15
  },
  "RequestLogging": {
    "Enabled": true,
    "LogRequestBody": false,
    "LogResponseBody": false,
    "MaxBodySizeKB": 5,
    "SensitiveHeaders": [
      "Authorization",
      "Cookie",
      "Set-Cookie",
      "X-API-Key",
      "X-Auth-Token"
    ],
    "SensitiveFields": [
      "password",
      "senha",
      "token",
      "secret",
      "key",
      "cpf",
      "cnpj"
    ]
  }
}